{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "outDir": "dist",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "lib": [
      "ES2022"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}